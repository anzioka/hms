<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import java.lang.*?>
<VBox xmlns:fx="http://javafx.com/fxml/1" alignment="TOP_CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
      minWidth="-Infinity" prefHeight="291.0" prefWidth="377.0" spacing="10.0" styleClass="container-padded"
      stylesheets="@../css/main.css" xmlns="http://javafx.com/javafx/8"
      fx:controller="main.java.controller.EditProcedureController">
    <children>
        <VBox spacing="20.0" VBox.vgrow="ALWAYS">
            <children>
                <GridPane prefHeight="104.0" prefWidth="355.0">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="182.0" minWidth="10.0" prefWidth="54.0"/>
                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="337.0" minWidth="10.0" prefWidth="318.0"/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    </rowConstraints>
                    <children>
                        <Label alignment="CENTER" prefHeight="16.0" text="Name">
                            <styleClass>
                                <String fx:value="color-dark"/>
                                <String fx:value="fw-500"/>
                            </styleClass>
                        </Label>
                        <Label alignment="CENTER" prefHeight="16.0" text="Cost" GridPane.rowIndex="1">
                            <styleClass>
                                <String fx:value="color-dark"/>
                                <String fx:value="fw-500"/>
                            </styleClass>
                        </Label>
                        <TextField fx:id="name" prefHeight="27.0" prefWidth="260.0" GridPane.columnIndex="1"/>
                        <TextField fx:id="cost" prefHeight="27.0" prefWidth="254.0" GridPane.columnIndex="1"
                                   GridPane.rowIndex="1"/>
                    </children>
                </GridPane>
                <Pane prefHeight="0.0" prefWidth="340.0" VBox.vgrow="ALWAYS"/>
                <HBox alignment="CENTER_RIGHT" prefWidth="300.0" spacing="10.0">
                    <children>
                        <Button mnemonicParsing="false" onAction="#onDelete" styleClass="btn-danger" text="Delete "/>
                        <Pane prefHeight="27.0" prefWidth="23.0" HBox.hgrow="ALWAYS"/>
                        <Button defaultButton="true" mnemonicParsing="false" onAction="#onSave" styleClass="btn-success"
                                text="Save Changes"/>
                    </children>
                </HBox>
            </children>
            <styleClass>
                <String fx:value="container-padded"/>
                <String fx:value="bg-lighten6"/>
            </styleClass>
            <VBox.margin>
                <Insets/>
            </VBox.margin>
        </VBox>
    </children>
</VBox>
