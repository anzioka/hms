<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.VBox?>
<VBox alignment="CENTER" styleClass="container-padded" stylesheets="@../css/main.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.java.controller.ManageUsersController">
    <children>
        <VBox fx:id="container" alignment="TOP_RIGHT" maxWidth="-Infinity" prefHeight="536.0" prefWidth="1000.0" spacing="5.0" styleClass="bg-lighten6" stylesheets="@../css/main.css" VBox.vgrow="ALWAYS">
            <children>
                <Button mnemonicParsing="false" onAction="#onNewUser" prefWidth="96.0" styleClass="btn-info" text="New User" />
                <TableView fx:id="userTableView" prefHeight="401.0" prefWidth="651.0" styleClass="table" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="firstNameCol" prefWidth="75.0" text="First Name" />
                        <TableColumn fx:id="surnameCol" prefWidth="75.0" text="Surname" />
                        <TableColumn fx:id="loginNameCol" prefWidth="75.0" text="LoginName" />
                        <TableColumn fx:id="categoryCol" prefWidth="75.0" text="Category" />
                        <TableColumn fx:id="optionsCol" prefWidth="75.0" text="Options" />
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>
            </children>
        </VBox>
    </children>
</VBox>
