<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox xmlns:fx="http://javafx.com/fxml/1" alignment="TOP_CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
      minWidth="-Infinity" prefHeight="532.0" prefWidth="727.0" spacing="5.0" styleClass="bg-white"
      stylesheets="@../css/main.css" xmlns="http://javafx.com/javafx/8"
      fx:controller="main.java.controller.ReceiveOrderedDrugsController">
    <children>
        <Label fx:id="orderNo" styleClass="header" text="ORDER NO."/>
        <HBox alignment="CENTER_LEFT" prefHeight="85.0" prefWidth="661.0">
            <children>
                <GridPane prefHeight="101.0" prefWidth="365.0">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="178.0" minWidth="10.0" prefWidth="98.0"/>
                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="284.0" minWidth="10.0" prefWidth="267.0"/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    </rowConstraints>
                    <children>
                        <Label styleClass="header" text="Supplier :"/>
                        <Label styleClass="header" text="Date Ordered :" GridPane.rowIndex="1"/>
                        <Label styleClass="header" text="Date Received" GridPane.rowIndex="2"/>
                        <DatePicker fx:id="dateReceived" prefHeight="27.0" prefWidth="123.0" promptText="dd-mm-yyyy"
                                    GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                        <Label fx:id="dateOrdered" styleClass="header-light-bg" text="Label" GridPane.columnIndex="1"
                               GridPane.rowIndex="1"/>
                        <Label fx:id="supplier" styleClass="header-light-bg" text="Label" GridPane.columnIndex="1"/>
                    </children>
                </GridPane>
            </children>
        </HBox>
        <TableView fx:id="tableView" prefHeight="188.0" prefWidth="661.0">
            <columns>
                <TableColumn fx:id="itemNumber" prefWidth="55.0" text="Item #"/>
                <TableColumn fx:id="description" prefWidth="239.0" style="-fx-alignment: center-left;"
                             text="Description"/>
                <TableColumn fx:id="quantityOrdered" prefWidth="90.0" text="Qty Ordered"/>
                <TableColumn fx:id="unitPrice" prefWidth="99.0" text="Unit Price"/>
                <TableColumn fx:id="totalPrice" prefWidth="105.0" text="Total Price"/>
                <TableColumn fx:id="options" prefWidth="126.0" text="Options"/>
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
        </TableView>
        <VBox alignment="CENTER_RIGHT" spacing="5.0" styleClass="bg-lighten4" VBox.vgrow="ALWAYS">
            <children>
                <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="5.0">
                    <children>
                        <GridPane HBox.hgrow="ALWAYS">
                            <columnConstraints>
                                <ColumnConstraints hgrow="SOMETIMES" maxWidth="150.0" minWidth="10.0" prefWidth="51.0"/>
                                <ColumnConstraints hgrow="SOMETIMES" maxWidth="206.0" minWidth="10.0"
                                                   prefWidth="206.0"/>
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                            </rowConstraints>
                            <children>
                                <Label styleClass="header" text="Name"/>
                                <Label styleClass="header" text="Manufacturer" GridPane.rowIndex="1"/>
                                <Label styleClass="header" text="Qty Received" GridPane.rowIndex="2"/>
                                <TextField fx:id="manufacturer" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                                <TextField fx:id="qtyReceived" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                                <TextField fx:id="itemName" GridPane.columnIndex="1"/>
                            </children>
                        </GridPane>
                        <GridPane>
                            <columnConstraints>
                                <ColumnConstraints hgrow="SOMETIMES" maxWidth="96.0" minWidth="10.0" prefWidth="84.0"/>
                                <ColumnConstraints hgrow="SOMETIMES" maxWidth="116.0" minWidth="10.0"
                                                   prefWidth="116.0"/>
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                            </rowConstraints>
                            <children>
                                <Label styleClass="header" text="Buying Price"/>
                                <Label styleClass="header" text="Mark up (%)" GridPane.rowIndex="1"/>
                                <Label styleClass="header" text="Selling Price" GridPane.rowIndex="2"/>
                                <TextField fx:id="buyingPrice" GridPane.columnIndex="1"/>
                                <TextField fx:id="markUp" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                                <TextField fx:id="sellingPrice" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                            </children>
                        </GridPane>
                        <GridPane>
                            <columnConstraints>
                                <ColumnConstraints hgrow="SOMETIMES" maxWidth="96.0" minWidth="10.0" prefWidth="77.0"/>
                                <ColumnConstraints hgrow="SOMETIMES" maxWidth="123.0" minWidth="10.0"
                                                   prefWidth="123.0"/>
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                            </rowConstraints>
                            <children>
                                <Label styleClass="header" text="Batch No."/>
                                <Label styleClass="header" text="Expiry Date" GridPane.rowIndex="1"/>
                                <TextField fx:id="batchNo" GridPane.columnIndex="1"/>
                                <DatePicker fx:id="expiryDate" promptText="dd-mm-yyyy" GridPane.columnIndex="1"
                                            GridPane.rowIndex="1"/>
                            </children>
                        </GridPane>
                    </children>
                </HBox>
                <Button mnemonicParsing="false" onAction="#onAddToStock" styleClass="btn-success" text="Add to Stock"/>
            </children>
        </VBox>
        <HBox alignment="CENTER" prefHeight="30.0" prefWidth="661.0">
            <children>
                <Button mnemonicParsing="false" onAction="#onClose" prefWidth="98.0" styleClass="btn-primary"
                        text="Close"/>
            </children>
        </HBox>
    </children>
</VBox>
