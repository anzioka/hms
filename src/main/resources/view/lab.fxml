<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import java.lang.String?>
<VBox xmlns:fx="http://javafx.com/fxml/1" fx:id="container" prefHeight="475.0" prefWidth="724.0" styleClass="scene"
      stylesheets="@../css/main.css" xmlns="http://javafx.com/javafx/8"
      fx:controller="main.java.controller.LaboratoryController">
    <children>
        <HBox alignment="CENTER" maxHeight="-Infinity" minHeight="-Infinity" prefHeight="60.0" prefWidth="200.0"
              spacing="10.0" styleClass="bg-lighten3">
            <children>
                <ImageView fitHeight="35.0" fitWidth="35.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../images/laboratory.png"/>
                    </image>
                </ImageView>
                <Label text="Laboratory">
                    <styleClass>
                        <String fx:value="h4"/>
                        <String fx:value="color-accent"/>
                    </styleClass>
                </Label>
            </children>
        </HBox>
        <TabPane fx:id="tabPane" prefHeight="200.0" prefWidth="200.0" tabClosingPolicy="UNAVAILABLE"
                 VBox.vgrow="ALWAYS">
            <tabs>
                <Tab text="Pending Requests">
                    <content>
                        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                            <children>
                                <HBox alignment="CENTER_RIGHT" prefHeight="35.0" prefWidth="714.0" spacing="5.0"
                                      AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
                                      AnchorPane.topAnchor="5.0">
                                    <children>
                                        <Button mnemonicParsing="false" onAction="#onNewRequest" styleClass="btn-info"
                                                text="Create New Request"/>
                                    </children>
                                </HBox>
                                <TableView fx:id="labRequestTableView" layoutX="31.0" layoutY="43.0" prefHeight="329.0"
                                           prefWidth="714.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                                           AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="43.0">
                                    <columnResizePolicy>
                                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                                    </columnResizePolicy>
                                    <columns>
                                        <TableColumn fx:id="timeRequested" prefWidth="88.0" text="Time Requested"/>
                                        <TableColumn fx:id="category" prefWidth="75.0" text="Category"/>
                                        <TableColumn fx:id="patientId" prefWidth="75.0" text="Patient No."/>
                                        <TableColumn fx:id="patientName" prefWidth="75.0" text="Patient Name"/>
                                        <TableColumn fx:id="test" prefWidth="90.0" text="Test"/>
                                        <TableColumn fx:id="paymentMode" prefWidth="75.0" text="Payment Mode"/>
                                        <TableColumn fx:id="paymentStatus" prefWidth="75.0" text="Payment Status"/>
                                        <TableColumn fx:id="options" prefWidth="75.0" text="Options"/>
                                    </columns>
                                </TableView>
                            </children>
                        </AnchorPane>
                    </content>
                </Tab>
                <Tab text="Lab Tests"/>
                <Tab text="All Lab Results"/>
            </tabs>
        </TabPane>
    </children>
</VBox>
