<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<VBox xmlns:fx="http://javafx.com/fxml/1" fx:id="reportContainer" alignment="TOP_CENTER" maxHeight="-Infinity" maxWidth="-Infinity"
      minHeight="-Infinity" minWidth="-Infinity" prefHeight="566.0" prefWidth="800.0" spacing="5.0"
      styleClass="bg-white" stylesheets="@../css/main.css" xmlns="http://javafx.com/javafx/8"
      fx:controller="main.java.controller.DailyPatientVisitReportSummary">
    <children>
        <Label fx:id="reportsTitle" styleClass="heading2-blue" text="Patient Visits Summary, Date"/>
        <Label fx:id="reportsSubTitle" styleClass="header-light-bg" text="(Subtitle)"/>
        <Separator prefWidth="200.0"/>
        <TableView fx:id="tableView" prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="patientId" prefWidth="75.0" text="Patient Id"/>
                <TableColumn fx:id="patientName" prefWidth="75.0" text="Patient Name"/>
                <TableColumn fx:id="age" prefWidth="75.0" text="Age"/>
                <TableColumn fx:id="patientSex" prefWidth="75.0" text="Sex"/>
                <TableColumn fx:id="phoneNumber" prefWidth="75.0" text="Phone Number"/>
                <TableColumn fx:id="paymentMode" prefWidth="75.0" text="Payment Mode"/>
                <TableColumn fx:id="options" prefWidth="75.0" text="Options"/>
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
        </TableView>
        <HBox fx:id="buttonBar" alignment="CENTER_RIGHT" spacing="10.0">
            <children>
                <Button mnemonicParsing="false" onAction="#onPrint" prefWidth="96.0" styleClass="btn-primary"
                        text="Print"/>
            </children>
        </HBox>
    </children>
</VBox>
