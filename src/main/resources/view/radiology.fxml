<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="5.0" styleClass="scene" stylesheets="@../css/main.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.java.controller.RadiologyController">
   <children>
      <HBox alignment="CENTER" maxHeight="-Infinity" minHeight="-Infinity" prefHeight="58.0" prefWidth="886.0" spacing="10.0" styleClass="bg-lighten3">
         <children>
            <ImageView fitHeight="35.0" fitWidth="35.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../images/imaging.png" />
               </image>
            </ImageView>
            <Label text="Radiology">
               <styleClass>
                  <String fx:value="h4" />
                  <String fx:value="color-accent" />
               </styleClass>
            </Label>
         </children>
      </HBox>
      <TabPane fx:id="tabPane" prefHeight="427.0" prefWidth="886.0" tabClosingPolicy="UNAVAILABLE" VBox.vgrow="ALWAYS">
          <tabs>
              <Tab text="Requests">
                  <content>
                      <VBox prefHeight="357.0" prefWidth="635.0">
                          <children>
                              <TableView fx:id="tableView" prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
                                  <columns>
                                      <TableColumn fx:id="date" prefWidth="75.0" text="Date" />
                                      <TableColumn fx:id="patient" prefWidth="75.0" text="Patient Name" />
                              <TableColumn fx:id="doctor" prefWidth="75.0" text="Doctor" />
                                      <TableColumn fx:id="category" prefWidth="75.0" text="Category" />
                                      <TableColumn fx:id="description" prefWidth="75.0" text="Description" />
                                      <TableColumn fx:id="paymentStatus" prefWidth="75.0" text="Payment Status" />
                                      <TableColumn fx:id="view" prefWidth="75.0" text="View" />
                                  </columns>
                                  <columnResizePolicy>
                                      <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                                  </columnResizePolicy>
                              </TableView>
                          </children>
                      </VBox>
                  </content>
              </Tab>
            <Tab text="Radiology Items" />
            <Tab text="All Radiology Results" />
          </tabs>
      </TabPane>
   </children>
</VBox>
