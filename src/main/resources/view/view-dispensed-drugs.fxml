<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import java.lang.String?>
<VBox xmlns:fx="http://javafx.com/fxml/1" prefHeight="400.0" prefWidth="600.0" spacing="5.0" styleClass="scene"
      stylesheets="@../css/main.css" xmlns="http://javafx.com/javafx/8"
      fx:controller="main.java.controller.DispensedDrugsController">
    <children>
        <HBox alignment="CENTER" prefHeight="50.0" prefWidth="590.0" spacing="5.0">
            <children>
                <Label text="From"/>
                <DatePicker fx:id="startDate" prefWidth="153.0" promptText="dd-mm-yyyy"/>
                <Label layoutX="11.0" layoutY="20.0" text="To"/>
                <DatePicker fx:id="endDate" layoutX="50.0" layoutY="15.0" prefWidth="153.0" promptText="dd-mm-yyyy"/>
                <Button mnemonicParsing="false" onAction="#onSearch" styleClass="btn-info-outline" text="Search"/>
            </children>
            <styleClass>
                <String fx:value="border-light-3"/>
                <String fx:value="container-padded"/>
            </styleClass>
        </HBox>
        <TableView fx:id="tableView" prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="date" prefWidth="75.0" text="Date"/>
                <TableColumn fx:id="category" prefWidth="75.0" text="Category"/>
                <TableColumn fx:id="patientName" prefWidth="75.0" text="Patient Name"/>
                <TableColumn fx:id="medicine" prefWidth="75.0" text="Medicine"/>
                <TableColumn fx:id="quantity" prefWidth="75.0" text="Quantity"/>
                <TableColumn fx:id="formulation" prefWidth="75.0" text="Formulation"/>
                <TableColumn fx:id="dosage" prefWidth="75.0" text="Dosage"/>
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
        </TableView>
    </children>
</VBox>
