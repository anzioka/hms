<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox xmlns:fx="http://javafx.com/fxml/1" alignment="BOTTOM_RIGHT" spacing="5.0" styleClass="container-padded"
      stylesheets="@../css/main.css" xmlns="http://javafx.com/javafx/8"
      fx:controller="main.java.controller.InsuranceGroupsController">
    <children>
        <SplitPane dividerPositions="0.46111111111111114" maxHeight="-Infinity" maxWidth="-Infinity"
                   minHeight="-Infinity" minWidth="-Infinity" prefHeight="548.0" prefWidth="753.0">
            <items>
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="390.0" prefWidth="247.0">
                    <children>
                        <VBox alignment="CENTER_RIGHT" layoutX="12.0" layoutY="28.0" prefHeight="141.0"
                              prefWidth="329.0" spacing="10.0" styleClass="bg-lighten5" AnchorPane.leftAnchor="5.0"
                              AnchorPane.rightAnchor="5.0" AnchorPane.topAnchor="5.0">
                            <children>
                                <GridPane layoutX="12.0" layoutY="28.0" prefHeight="67.0" prefWidth="240.0">
                                    <columnConstraints>
                                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="231.0" minWidth="10.0"
                                                           prefWidth="110.0"/>
                                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="208.0" minWidth="10.0"
                                                           prefWidth="207.0"/>
                                    </columnConstraints>
                                    <rowConstraints>
                                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                    </rowConstraints>
                                    <children>
                                        <Label styleClass="header-light-bg" text="Name of Group"/>
                                        <Label styleClass="header-light-bg" text="Consultation fee"
                                               GridPane.rowIndex="1"/>
                                        <TextField fx:id="groupName" onAction="#createGroup" prefHeight="27.0"
                                                   prefWidth="198.0" GridPane.columnIndex="1"/>
                                        <TextField fx:id="feeAmount" onAction="#createGroup" GridPane.columnIndex="1"
                                                   GridPane.rowIndex="1"/>
                                    </children>
                                </GridPane>
                                <Pane prefHeight="10.0" prefWidth="317.0" VBox.vgrow="ALWAYS"/>
                                <Button layoutX="156.0" layoutY="105.0" mnemonicParsing="false" onAction="#createGroup"
                                        styleClass="btn-info" text="Create Group"/>
                            </children>
                        </VBox>
                        <TableView fx:id="groupTableView" editable="true" layoutX="5.0" layoutY="150.0"
                                   prefHeight="386.0" prefWidth="329.0" AnchorPane.bottomAnchor="2.0"
                                   AnchorPane.leftAnchor="5.0" AnchorPane.rightAnchor="5.0"
                                   AnchorPane.topAnchor="150.0">
                            <columns>
                                <TableColumn fx:id="groupNameCol" prefWidth="187.0" style="-fx-alignment: center-left;"
                                             text="Group Name"/>
                                <TableColumn fx:id="consultationFeeCol" prefWidth="143.0" text="Consultation"/>
                            </columns>
                            <columnResizePolicy>
                                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                            </columnResizePolicy>
                        </TableView>
                    </children>
                </AnchorPane>
                <VBox fx:id="groupEditContainer" alignment="TOP_CENTER" spacing="5.0">
                    <children>
                        <HBox alignment="CENTER_RIGHT" prefHeight="36.0" prefWidth="401.0" spacing="100.0">
                            <children>
                                <Label fx:id="nameOfGroupLabel" styleClass="header-light-bg" text="group name"
                                       HBox.hgrow="ALWAYS"/>
                                <Button mnemonicParsing="false" onAction="#onDeleteGroup" styleClass="btn-danger"
                                        text="Delete Group"/>
                            </children>
                        </HBox>
                        <VBox fx:id="assignedItemsContainer" alignment="BOTTOM_RIGHT" prefHeight="400.0" spacing="5.0"
                              VBox.vgrow="ALWAYS">
                            <children>
                                <TableView fx:id="assignedItemsTableView" prefHeight="200.0" prefWidth="200.0"
                                           VBox.vgrow="ALWAYS">
                                    <columns>
                                        <TableColumn fx:id="insuranceCol" prefWidth="258.0"
                                                     style="-fx-alignment: center-left;" text="Insurance Company"/>
                                        <TableColumn fx:id="assignedTableOptions" prefWidth="141.0" text="Options"/>
                                    </columns>
                                    <columnResizePolicy>
                                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                                    </columnResizePolicy>
                                </TableView>
                                <HBox alignment="CENTER_RIGHT" layoutX="14.0" layoutY="476.0" spacing="5.0"
                                      AnchorPane.leftAnchor="14.0" AnchorPane.rightAnchor="-4.0">
                                    <children>
                                        <ChoiceBox fx:id="insuranceChoiceBox" layoutX="83.0" layoutY="379.0"
                                                   prefHeight="27.0" prefWidth="288.0"/>
                                        <Button layoutX="245.0" layoutY="379.0" mnemonicParsing="false"
                                                onAction="#addItemToGroup" styleClass="btn-info" text="Add To Group"/>
                                    </children>
                                </HBox>
                            </children>
                        </VBox>
                        <VBox fx:id="newGroupSelector" alignment="BOTTOM_RIGHT" prefHeight="200.0" prefWidth="100.0"
                              spacing="10.0" VBox.vgrow="ALWAYS">
                            <children>
                                <HBox>
                                    <children>
                                        <Label styleClass="header-light-bg" text="Select companies to assign to group"/>
                                    </children>
                                </HBox>
                                <ListView fx:id="insuranceListView" prefHeight="200.0" prefWidth="200.0"
                                          VBox.vgrow="ALWAYS"/>
                                <Button mnemonicParsing="false" onAction="#addItemsToGroup" styleClass="btn-success"
                                        text="Add to Group"/>
                            </children>
                        </VBox>
                    </children>
                </VBox>
            </items>
        </SplitPane>
    </children>
</VBox>
