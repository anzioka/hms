<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox xmlns:fx="http://javafx.com/fxml/1" alignment="TOP_CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
      minWidth="-Infinity" prefHeight="461.0" prefWidth="635.0" spacing="5.0" styleClass="bg-white"
      stylesheets="@../css/main.css" xmlns="http://javafx.com/javafx/8"
      fx:controller="main.java.controller.EditPurchaseOrderController">
    <children>
        <Label fx:id="orderNumber" styleClass="header" text="ORDER NO. "/>
        <HBox alignment="CENTER_LEFT" prefHeight="35.0" prefWidth="588.0">
            <children>
                <Label fx:id="orderDate" styleClass="header" text="Date :"/>
            </children>
        </HBox>
        <TableView fx:id="tableView" editable="true" prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="itemNumberCol" prefWidth="65.0" text="Item #"/>
                <TableColumn fx:id="descriptionCol" prefWidth="156.0" text="Description"/>
                <TableColumn fx:id="quantityCol" prefWidth="79.0" text="Quantity"/>
                <TableColumn fx:id="unitPriceCol" prefWidth="120.0" text="Unit Price (Ksh)"/>
                <TableColumn fx:id="totalPriceCol" minWidth="0.0" prefWidth="125.0" text="Total Price(Ksh)"/>
                <TableColumn fx:id="optionsCol" prefWidth="77.0" text="Options"/>
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
        </TableView>
        <HBox alignment="CENTER_RIGHT" prefHeight="39.0" prefWidth="588.0" spacing="10.0">
            <children>
                <Label text="TOTAL"/>
                <Label fx:id="orderTotal" styleClass="header" text="Ksh. 0"/>
            </children>
        </HBox>
        <HBox fx:id="completeOrderHolder" alignment="TOP_RIGHT">
            <children>
                <Button mnemonicParsing="false" onAction="#onCompleteOrder" prefWidth="103.0" styleClass="btn-success"
                        text="Complete "/>
            </children>
        </HBox>
        <Separator prefWidth="200.0"/>
        <VBox fx:id="editOrderBox" alignment="CENTER_RIGHT" spacing="5.0" styleClass="bg-lighten5">
            <children>
                <HBox alignment="CENTER_LEFT" prefHeight="95.0" prefWidth="588.0" spacing="5.0">
                    <children>
                        <GridPane prefHeight="83.0" prefWidth="251.0">
                            <columnConstraints>
                                <ColumnConstraints hgrow="SOMETIMES" maxWidth="155.0" minWidth="10.0" prefWidth="50.0"/>
                                <ColumnConstraints hgrow="SOMETIMES" maxWidth="162.0" minWidth="10.0"
                                                   prefWidth="162.0"/>
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints maxHeight="47.0" minHeight="10.0" prefHeight="43.0" vgrow="SOMETIMES"/>
                                <RowConstraints maxHeight="40.0" minHeight="10.0" prefHeight="40.0" vgrow="SOMETIMES"/>
                            </rowConstraints>
                            <children>
                                <Label styleClass="header" text="Name of Drug"/>
                                <TextField fx:id="nameOfDrug" onAction="#onAddToOrder" GridPane.columnIndex="1"/>
                                <Label styleClass="header" text="Supplier" GridPane.rowIndex="1"/>
                                <TextField fx:id="supplier" onAction="#onAddToOrder" GridPane.columnIndex="1"
                                           GridPane.rowIndex="1"/>
                            </children>
                        </GridPane>
                        <Pane prefHeight="83.0" prefWidth="5.0" HBox.hgrow="ALWAYS"/>
                        <GridPane prefHeight="83.0" prefWidth="307.0">
                            <columnConstraints>
                                <ColumnConstraints hgrow="SOMETIMES" maxWidth="214.0" minWidth="10.0"
                                                   prefWidth="108.0"/>
                                <ColumnConstraints hgrow="SOMETIMES" maxWidth="207.0" minWidth="10.0"
                                                   prefWidth="199.0"/>
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                            </rowConstraints>
                            <children>
                                <Label styleClass="header" text="Quantity"/>
                                <Label styleClass="header" text="Unit Price (Ksh)" GridPane.rowIndex="1"/>
                                <TextField fx:id="quantity" onAction="#onAddToOrder" GridPane.columnIndex="1"/>
                                <TextField fx:id="unitPrice" onAction="#onAddToOrder" GridPane.columnIndex="1"
                                           GridPane.rowIndex="1"/>
                            </children>
                        </GridPane>
                    </children>
                </HBox>
                <Button mnemonicParsing="false" onAction="#onAddToOrder" styleClass="btn-primary" text="Add To order"/>
            </children>
        </VBox>
    </children>
</VBox>
