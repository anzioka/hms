<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="410.0" prefWidth="954.0" styleClass="scene"
            stylesheets="@../css/main.css" xmlns="http://javafx.com/javafx/8"
            fx:controller="main.java.controller.InpatientManagementController">
    <children>
        <VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="410.0"
              prefWidth="954.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
              AnchorPane.topAnchor="0.0">
            <children>
                <TabPane fx:id="tabPane" prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
                    <tabs>
                        <Tab closable="false" text="Admitted Patients">
                            <content>
                                <VBox spacing="5.0">
                                    <children>
                                        <HBox alignment="CENTER_LEFT" prefHeight="40.0" prefWidth="600.0">
                                            <children>
                                                <Button mnemonicParsing="false" onAction="#onAdmitPatient"
                                                        styleClass="btn-info-outline" text="Admit Patient"/>
                                                <Pane prefHeight="200.0" HBox.hgrow="ALWAYS"/>
                                                <Button mnemonicParsing="false" onAction="#onRefreshData"
                                                        styleClass="btn-info-outline" text="Refresh"/>
                                                <Pane prefHeight="200.0" HBox.hgrow="ALWAYS"/>
                                                <HBox alignment="CENTER_RIGHT" prefHeight="100.0" spacing="5.0"
                                                      styleClass="bg-white">
                                                    <children>
                                                        <ChoiceBox fx:id="wardChoiceBox" prefWidth="150.0"/>
                                                        <ChoiceBox fx:id="searchParamChoiceBox" prefWidth="150.0"/>
                                                        <TextField fx:id="searchField"/>
                                                        <Button alignment="CENTER" contentDisplay="CENTER"
                                                                mnemonicParsing="false" onAction="#onSearch"
                                                                styleClass="btn-primary-outline" text="Search"/>
                                                    </children>
                                                </HBox>
                                            </children>
                                        </HBox>
                                        <Separator prefWidth="200.0"/>
                                        <TableView fx:id="tableView" prefHeight="200.0" prefWidth="200.0"
                                                   VBox.vgrow="ALWAYS">
                                            <columns>
                                                <TableColumn fx:id="inpatientNo" prefWidth="75.0" text="Inpatient No."/>
                                                <TableColumn fx:id="name" prefWidth="75.0" text="Patient Name"/>
                                                <TableColumn fx:id="age" prefWidth="75.0" text="Age"/>
                                                <TableColumn fx:id="sex" prefWidth="75.0" text="Sex"/>
                                                <TableColumn fx:id="dateAdmitted" prefWidth="75.0"
                                                             text="Date Admitted"/>
                                                <TableColumn fx:id="ward" prefWidth="75.0" text="Ward"/>
                                                <TableColumn fx:id="bed" prefWidth="75.0" text="Bed"/>
                                                <TableColumn fx:id="options" prefWidth="75.0" text="Options"/>
                                            </columns>
                                            <columnResizePolicy>
                                                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                                            </columnResizePolicy>
                                        </TableView>
                                    </children>
                                    <padding>
                                        <Insets top="2.0"/>
                                    </padding>
                                </VBox>
                            </content>
                        </Tab>
                        <Tab closable="false" text="Admission History"/>
                    </tabs>
                </TabPane>
            </children>
        </VBox>
    </children>
</AnchorPane>
