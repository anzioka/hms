<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import java.lang.String?>
<VBox fx:id="container" prefHeight="400.0" prefWidth="765.0" spacing="5.0" styleClass="scene" stylesheets="@../css/main.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.java.controller.PurchaseOrdersController">
    <children>
        <HBox alignment="CENTER_LEFT" spacing="5.0">
            <children>
                <Label text="Start Date">
                    <styleClass>
                        <String fx:value="color-info-dark" />
                        <String fx:value="fw-500" />
                    </styleClass>
                </Label>
                <DatePicker fx:id="startDate" prefWidth="153.0" promptText="dd-mm-yyyy" />
                <Label layoutX="10.0" layoutY="16.0" text="Start Date">
                    <HBox.margin>
                        <Insets left="10.0" />
                    </HBox.margin>
                    <styleClass>
                        <String fx:value="color-info-dark" />
                        <String fx:value="fw-500" />
                    </styleClass>
                </Label>
                <DatePicker fx:id="endDate" layoutX="78.0" layoutY="11.0" prefWidth="153.0" promptText="dd-mm-yyyy" />
                <Button mnemonicParsing="false" onAction="#getData" styleClass="fw-500" text="Search Records" />
                <Pane HBox.hgrow="ALWAYS" />
                <Button fx:id="createOrderBtn" mnemonicParsing="false" onAction="#onNewOrder" styleClass="btn-primary-outline" text="New Order" />
            </children>
        </HBox>
        <Separator prefWidth="200.0" />
        <TableView fx:id="tableView" prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="orderNumber" prefWidth="75.0" text="Order No." />
                <TableColumn fx:id="supplier" prefWidth="75.0" text="Supplier" />
                <TableColumn fx:id="dateOrdered" prefWidth="75.0" text="Date Ordered" />
                <TableColumn fx:id="dateDelivered" prefWidth="75.0" text="Date Delivered" />
                <TableColumn fx:id="status" prefWidth="75.0" text="Status" />
                <TableColumn fx:id="options" prefWidth="75.0" text="Options" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
    </children>
</VBox>
