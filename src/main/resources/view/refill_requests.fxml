<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8"
            fx:controller="main.java.controller.TransferRequestsController">
    <children>
        <VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="466.0"
              prefWidth="600.0" spacing="5.0" styleClass="bg-lighten5" stylesheets="@../css/main.css"
              AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
              AnchorPane.topAnchor="0.0">
            <children>
                <Button fx:id="newRequestBtn" onAction="#onNewRequest" mnemonicParsing="false" styleClass="btn-info"
                        text="New Request"/>
                <TableView fx:id="refillRequestTableView" prefHeight="374.0" prefWidth="600.0" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="serialNum" prefWidth="75.0" text="Serial Num"/>
                        <TableColumn fx:id="medicineName" prefWidth="75.0" text="Medicine Name"/>
                        <TableColumn fx:id="dateRequested" prefWidth="75.0" text="Date Requested"/>
                        <TableColumn fx:id="amountRequested" prefWidth="75.0" text="Qty Requested"/>
                        <TableColumn fx:id="amountReceived" prefWidth="75.0" text="Qty Received"/>
                        <TableColumn fx:id="status" prefWidth="75.0" text="Status"/>
                        <TableColumn fx:id="options" prefWidth="75.0" text="Options"/>
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                    </columnResizePolicy>
                </TableView>

                <VBox fx:id="transferDrugsBox" alignment="TOP_CENTER" prefHeight="184.0" prefWidth="588.0"
                      spacing="5.0">
                    <children>
                        <Label fx:id="transferRequestHeader" styleClass="header-light-bg"
                               text="Transfer Drugs to Pharmacy"/>
                        <TableView fx:id="medicineTableView" prefHeight="200.0" prefWidth="200.0">
                            <columns>
                                <TableColumn fx:id="name" prefWidth="75.0" text="Name"/>
                                <TableColumn fx:id="manufacturer" prefWidth="75.0" text="Manufacturer"/>
                                <TableColumn fx:id="sellingPrice" prefWidth="75.0" text="Selling Price"/>
                                <TableColumn fx:id="batchNo" prefWidth="75.0" text="Batch No."/>
                                <TableColumn fx:id="expiryDate" prefWidth="75.0" text="Expiry Date"/>
                                <TableColumn fx:id="stock" prefWidth="75.0" text="Stock"/>
                                <TableColumn fx:id="quantityTransferred" prefWidth="75.0" text="Qty to Transfer"/>
                                <TableColumn fx:id="selectMedicineOption" prefWidth="75.0" text="Options"/>
                            </columns>
                            <columnResizePolicy>
                                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                            </columnResizePolicy>
                        </TableView>
                    </children>
                </VBox>
            </children>
        </VBox>
    </children>
</AnchorPane>
