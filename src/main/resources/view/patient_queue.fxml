<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import java.lang.String?>
<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.java.controller.PatientQueueController" alignment="CENTER_LEFT"
      prefHeight="528.0"
      prefWidth="680.0"
      spacing="5.0"
      styleClass="scene" stylesheets="@../css/main.css" xmlns="http://javafx.com/javafx/8">
    <children>
        <HBox>
            <children>
                <Label text="Today's Date : ">
                    <styleClass>
                        <String fx:value="color-info-dark"/>
                        <String fx:value="h6_5"/>
                    </styleClass>
                </Label>
                <Label fx:id="dateToday" text="Label">
                    <styleClass>
                        <String fx:value="color-info-dark"/>
                        <String fx:value="h6_5"/>
                    </styleClass>
                </Label>
            </children>
        </HBox>
        <Separator prefWidth="200.0"/>
        <TableView fx:id="tableView" prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
            <columns>
                <TableColumn fx:id="patientNo" prefWidth="75.0" text="Patient No."/>
                <TableColumn fx:id="patientName" prefWidth="75.0" text="Patient Name"/>
                <TableColumn fx:id="age" prefWidth="75.0" text="Age"/>
                <TableColumn fx:id="serviceType" prefWidth="75.0" text="Visit Reason"/>
                <TableColumn fx:id="doctorName" prefWidth="75.0" text="Doctor"/>
                <TableColumn fx:id="status" prefWidth="75.0" text="Status"/>
                <TableColumn fx:id="timeCreated" prefWidth="75.0" text="Time Queued"/>
                <TableColumn fx:id="options" prefWidth="75.0" text="Options"/>
            </columns>
        </TableView>
    </children>
</VBox>
