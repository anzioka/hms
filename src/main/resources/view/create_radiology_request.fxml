<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import java.lang.*?>

<VBox fx:id="container" prefHeight="500.0" prefWidth="800.0" spacing="5.0" styleClass="scene" stylesheets="@../css/main.css"
      xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.java.controller.CreateRadiologyRequestController">
    <children>
        <AnchorPane prefHeight="87.0" prefWidth="612.0" styleClass="border-light-3">
            <VBox.margin>
                <Insets top="5.0" />
            </VBox.margin>
            <children>
                <VBox alignment="TOP_CENTER" layoutX="2.0" layoutY="-8.0" prefHeight="87.0" prefWidth="610.0" spacing="10.0" AnchorPane.bottomAnchor="9.0" AnchorPane.leftAnchor="1.0" AnchorPane.rightAnchor="1.0" AnchorPane.topAnchor="-9.0">
                    <children>
                        <HBox alignment="TOP_CENTER">
                            <children>
                                <Label layoutX="289.0" layoutY="14.0" style="-fx-background-color: #fff;" text="Make New Request" AnchorPane.topAnchor="-10.0">
                                    <styleClass>
                                        <String fx:value="color-info-dark" />
                                        <String fx:value="fw-500" />
                                        <String fx:value="h7" />
                                    </styleClass>
                                </Label>
                            </children>
                        </HBox>
                        <HBox alignment="CENTER" prefHeight="45.0" prefWidth="610.0" spacing="5.0" VBox.vgrow="ALWAYS">
                            <children>
                                <Label text="Category">
                                    <styleClass>
                                        <String fx:value="color-dark-3" />
                                        <String fx:value="fw-500" />
                                    </styleClass>
                                </Label>
                                <ChoiceBox fx:id="radiologyCategoryChoiceBox" prefWidth="150.0" />
                                <Label text="Description">
                                    <HBox.margin>
                                        <Insets left="15.0" />
                                    </HBox.margin>
                                    <styleClass>
                                        <String fx:value="color-dark-3" />
                                        <String fx:value="fw-500" />
                                    </styleClass>
                                </Label>
                        <ChoiceBox fx:id="descriptionChoiceBox" prefWidth="150.0" />
                        <Label text="Cost">
                           <styleClass>
                              <String fx:value="color-dark-3" />
                              <String fx:value="fw-500" />
                           </styleClass>
                        </Label>
                        <TextField fx:id="costField" editable="false" prefHeight="26.0" prefWidth="125.0" />
                                <Button maxHeight="-Infinity" minHeight="-Infinity" mnemonicParsing="false" onAction="#onSendRequest" prefHeight="27.0" styleClass="btn-info-outline" text="Send Request" />
                            </children>
                        </HBox>
                    </children>
                </VBox>
            </children>
        </AnchorPane>
        <TableView fx:id="tableView" prefHeight="295.0" prefWidth="612.0" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="test" prefWidth="75.0" text="Test" />
                <TableColumn fx:id="date" prefWidth="75.0" text="Time" />
            <TableColumn fx:id="doctor" prefWidth="75.0" text="Doctor" />
            <TableColumn fx:id="cost" prefWidth="75.0" text="Cost" />
                <TableColumn fx:id="option" minWidth="3.0" prefWidth="85.0" text="Options" />
            </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
        </TableView>
    </children>
</VBox>
