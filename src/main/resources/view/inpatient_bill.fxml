                        <Label fx:id="dateAdmitted" styleClass="fw-500" text="Label" GridPane.columnIndex="1"
                               GridPane.rowIndex="2"/>
                    </children>
                </GridPane>
                <Pane prefHeight="200.0" prefWidth="200.0" HBox.hgrow="ALWAYS"/>
                <GridPane prefWidth="250.0">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="189.0" minWidth="10.0" prefWidth="111.0"/>
                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="136.0" minWidth="10.0" prefWidth="131.0"/>
