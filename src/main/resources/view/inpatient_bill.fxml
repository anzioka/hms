            <columns>
                <TableColumn fx:id="description" prefWidth="75.0" text="Description"/>
                <TableColumn fx:id="category" prefWidth="75.0" text="Category"/>
                <TableColumn fx:id="paidAmount" prefWidth="75.0" text="Amount Paid"/>
                <TableColumn fx:id="pendingAmount" prefWidth="75.0" text="Outstanding Amount"/>
            </columns>
        </TableView>
        <HBox alignment="CENTER_RIGHT" prefHeight="40.0" prefWidth="674.0" spacing="5.0">
            <children>
                <Label text="NHIF Rebate"/>
                <Label fx:id="totalNHIFRebate" text="Label">
                    <styleClass>
                        <String fx:value="fw-500"/>
                        <String fx:value="color-unique"/>
                    </styleClass>
                </Label>
                <Pane prefHeight="200.0" prefWidth="200.0"/>
                <Label text="Total Amount"/>
                <Label fx:id="totalAmount" text="Label">
                    <styleClass>
                        <String fx:value="fw-500"/>
                        <String fx:value="color-accent"/>
                        <String fx:value="h6"/>
                    </styleClass>
                </Label>
            </children>
        </HBox>
    </children>
