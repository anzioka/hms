                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    </rowConstraints>
                    <children>
                        <Label text="Payment Mode"/>
                        <Label text="Ward" GridPane.rowIndex="1"/>
                        <Label text="Date Discharged" GridPane.rowIndex="2"/>
