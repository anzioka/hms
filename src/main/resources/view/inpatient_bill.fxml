                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    </rowConstraints>
                    <children>
                        <Label text="Inpatient No."/>
                        <Label text="Patient Name" GridPane.rowIndex="1"/>
                        <Label text="Date Admitted" GridPane.rowIndex="2"/>
                        <Label fx:id="inpatientNo" styleClass="fw-500" text="Label" GridPane.columnIndex="1"/>
                        <Label fx:id="name" styleClass="fw-500" text="Label" GridPane.columnIndex="1"
