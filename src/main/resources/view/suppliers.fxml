<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import java.lang.*?>
<VBox xmlns:fx="http://javafx.com/fxml/1" alignment="TOP_CENTER" prefHeight="554.0" prefWidth="893.0" spacing="10.0"
      stylesheets="@../css/main.css" xmlns="http://javafx.com/javafx/8"
      fx:controller="main.java.controller.SupplierController">
    <children>
        <VBox alignment="TOP_CENTER" prefHeight="544.0" prefWidth="841.0" spacing="5.0">
            <children>
                <HBox alignment="CENTER_RIGHT" prefHeight="38.0" prefWidth="950.0" spacing="5.0">
                    <children>
                        <Button mnemonicParsing="false" onAction="#onEdit" styleClass="btn-info-outline" text="Edit"/>
                        <Button mnemonicParsing="false" onAction="#onNewSupplier" styleClass="btn-info-outline"
                                text="New Supplier"/>
                    </children>
                </HBox>
                <VBox fx:id="editBox" alignment="TOP_CENTER" fillWidth="false" maxHeight="-Infinity"
                      minHeight="-Infinity" prefHeight="258.0" prefWidth="950.0" spacing="5.0">
                    <children>
                        <VBox alignment="TOP_CENTER" spacing="5.0">
                            <children>
                                <Label fx:id="editTitleLabel" text="Supplier Registration">
                                    <styleClass>
                                        <String fx:value="h6"/>
                                        <String fx:value="modal-title"/>
                                    </styleClass>
                                </Label>
                                <GridPane fx:id="gridPane" prefHeight="223.0" prefWidth="416.0">
                                    <columnConstraints>
                                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="204.0" minWidth="10.0"
                                                           prefWidth="108.0"/>
                                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="328.0" minWidth="10.0"
                                                           prefWidth="308.0"/>
                                    </columnConstraints>
                                    <rowConstraints>
                                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                    </rowConstraints>
                                    <children>
                                        <Label styleClass="color-dark-4" text="Name"/>
                                        <Label styleClass="color-dark-4" text="Address" GridPane.rowIndex="1"/>
                                        <Label styleClass="color-dark-4" text="Phone Number" GridPane.rowIndex="2"/>
                                        <Label styleClass="color-dark-4" text="Email" GridPane.rowIndex="3"/>
                                        <Label styleClass="color-dark-4" text="Contact Person" GridPane.rowIndex="4"/>
                                        <TextField fx:id="name" GridPane.columnIndex="1"/>
                                        <TextField fx:id="address" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                                        <TextField fx:id="phoneNumber" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                                        <TextField fx:id="email" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
                                        <TextField fx:id="contactPerson" onAction="#onSave" GridPane.columnIndex="1"
                                                   GridPane.rowIndex="4"/>
                                    </children>
                                </GridPane>
                                <Separator prefHeight="3.0" prefWidth="417.0"/>
                                <HBox alignment="CENTER_RIGHT" prefHeight="65.0" prefWidth="420.0">
                                    <children>
                                        <Button mnemonicParsing="false" onAction="#onCloseEditBox"
                                                styleClass="btn-warning" text="Close"/>
                                        <Pane HBox.hgrow="ALWAYS"/>
                                        <Button mnemonicParsing="false" onAction="#onSave" styleClass="btn-success"
                                                text="Save Details"/>
                                    </children>
                                </HBox>
                            </children>
                            <styleClass>
                                <String fx:value="container-padded"/>
                                <String fx:value="bg-lighten6"/>
                            </styleClass>
                        </VBox>
                    </children>
                    <styleClass>
                        <String fx:value="border-light-5"/>
                        <String fx:value="container-padded"/>
                    </styleClass>
                </VBox>
                <TableView fx:id="supplierTableView" prefHeight="512.0" prefWidth="883.0" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="nameCol" prefWidth="217.0" text="Name"/>
                        <TableColumn fx:id="addressCol" prefWidth="17.0" text="Address"/>
                        <TableColumn fx:id="phoneNumberCol" prefWidth="75.0" text="Phone Number"/>
                        <TableColumn fx:id="emailCol" prefWidth="75.0" text="Email"/>
                        <TableColumn fx:id="contactCol" prefWidth="75.0" text="Contact Person"/>
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                    </columnResizePolicy>
                </TableView>
            </children>

        </VBox>
    </children>
    <styleClass>
        <String fx:value="scene"/>
    </styleClass>
</VBox>
