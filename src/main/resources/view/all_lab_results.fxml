<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:id="container" styleClass="scene" stylesheets="@../css/main.css"
            xmlns="http://javafx.com/javafx/8" fx:controller="main.java.controller.LabResultsController">
    <children>
        <VBox alignment="TOP_CENTER" layoutX="107.0" layoutY="175.0" prefHeight="420.0" prefWidth="620.0" spacing="5.0"
              stylesheets="@../css/main.css" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
              AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <HBox alignment="CENTER" prefHeight="57.0" prefWidth="600.0" spacing="5.0" styleClass="border-light-3">
                    <children>
                        <Label text="From"/>
                        <DatePicker fx:id="startDate" prefWidth="153.0" promptText="dd-mm-yyyy"/>
                        <Label layoutX="194.0" layoutY="22.0" text="To">
                            <HBox.margin>
                                <Insets left="20.0"/>
                            </HBox.margin>
                        </Label>
                        <DatePicker fx:id="endDate" layoutX="213.0" layoutY="17.0" prefWidth="153.0"
                                    promptText="dd-mm-yyyy"/>
                        <Button onAction="#onSearch" mnemonicParsing="false" styleClass="btn-info" text="Search"/>
                    </children>
                </HBox>
                <TableView fx:id="tableView" prefHeight="340.0" prefWidth="600.0" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="date" prefWidth="75.0" text="Date"/>
                        <TableColumn fx:id="patientNo" prefWidth="75.0" text="Patient No."/>
                        <TableColumn fx:id="patientName" prefWidth="75.0" text="Patient's Name"/>
                        <TableColumn fx:id="testName" prefWidth="75.0" text="Test"/>
                        <TableColumn fx:id="requester" prefWidth="75.0" text="Requester"/>
                        <TableColumn fx:id="options" prefWidth="75.0" text="Options"/>
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                    </columnResizePolicy>
                </TableView>
            </children>
        </VBox>
    </children>
</AnchorPane>
