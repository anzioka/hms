<VBox alignment="TOP_CENTER" prefHeight="500.0" prefWidth="700.0" spacing="5.0" stylesheets="@../css/main.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.java.controller.EditUserController">
