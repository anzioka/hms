                                <children>
                                    <ListView fx:id="moduleAccessListView" prefHeight="248.0" prefWidth="300.0" VBox.vgrow="ALWAYS" />
                                </children>
                            </VBox>
                     </content>
                </TitledPane>
                <TitledPane text="Permissions">
                     <content>
                        <VBox styleClass="container-padded">
                           <children>
                              <ListView fx:id="userPermissionListView" VBox.vgrow="ALWAYS" />
                           </children>
                        </VBox>
                     </content>
                </TitledPane>
              </panes>
            </Accordion>
            </items>
            <VBox.margin>
                <Insets bottom="5.0" left="5.0" right="5.0" />
            </VBox.margin>
        </SplitPane>
        <HBox alignment="CENTER_RIGHT" prefHeight="52.0" prefWidth="695.0" spacing="30.0" styleClass="bg-lighten6">
            <children>
                <Button fx:id="deleteButton" mnemonicParsing="false" onAction="#onDeleteUser" prefWidth="106.0" styleClass="btn-danger-outline" text="Delete User" />
                <Pane prefHeight="200.0" HBox.hgrow="ALWAYS" />
                <Button fx:id="resetPasswordBtn" mnemonicParsing="false" onAction="#onResetPassword" styleClass="btn-info-outline" text="Reset Password" />
