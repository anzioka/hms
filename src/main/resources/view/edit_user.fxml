                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                            </rowConstraints>
                            <children>

                                <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0">
                                    <children>
                                        <Label text="User No." wrapText="true">
                                            <styleClass>
                                                <String fx:value="color-dark" />
                                                <String fx:value="fw-500" />
                                            </styleClass>
                                        </Label>
                                        <Label styleClass="required" text="*" />
                                    </children>
                                </HBox>
                                <TextField fx:id="userCode" editable="false" GridPane.columnIndex="1" />

                                <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0" GridPane.rowIndex="1">
                                    <children>
                                        <Label text="First Name" wrapText="true">
                                            <styleClass>
                                                <String fx:value="color-dark" />
                                                <String fx:value="fw-500" />
                                            </styleClass>
                                        </Label>
                                        <Label styleClass="required" text="*" />
                                    </children>
                                </HBox>
                                <TextField fx:id="firstName" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                                <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0" GridPane.rowIndex="2">
                                    <children>
                                        <Label text="Last Name" wrapText="true">
                                            <styleClass>
                                                <String fx:value="color-dark" />
