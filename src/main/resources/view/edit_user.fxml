                                <String fx:value="color-blue" />
                                <String fx:value="fw-500" />
                            </styleClass>
                        </Label>
                        <Separator prefWidth="200.0" />
                        <GridPane prefHeight="270.0" prefWidth="318.0">
                            <columnConstraints>
                                <ColumnConstraints hgrow="SOMETIMES" maxWidth="145.0" minWidth="10.0" prefWidth="91.0" />
