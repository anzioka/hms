                                    <children>
                                        <Label prefHeight="32.0" prefWidth="66.0" text="Confirm Password" wrapText="true">
                                            <styleClass>
                                                <String fx:value="color-dark" />
                                                <String fx:value="fw-500" />
                                            </styleClass>
                                        </Label>
                                        <Label styleClass="required" text="*" />
                                    </children>
                                </HBox>
                                <PasswordField fx:id="confirmPasswordField" GridPane.columnIndex="1" GridPane.rowIndex="6" />

