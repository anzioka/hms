<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import java.lang.*?>
<VBox xmlns:fx="http://javafx.com/fxml/1" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
      prefHeight="299.0" prefWidth="377.0" styleClass="container-padded" stylesheets="@../css/main.css"
      xmlns="http://javafx.com/javafx/8" fx:controller="main.java.controller.ResetPasswordController">
    <children>
        <VBox prefHeight="200.0" prefWidth="100.0" spacing="10.0" styleClass="bg-lighten6" VBox.vgrow="ALWAYS">
            <children>
                <HBox alignment="CENTER_LEFT">
                    <children>
                        <Label text="Password reset for "/>
                        <Label fx:id="userName" text="Label">
                            <styleClass>
                                <String fx:value="color-blue"/>
                                <String fx:value="fw-500"/>
                            </styleClass>
                        </Label>
                    </children>
                </HBox>
                <Separator prefWidth="200.0"/>
                <GridPane prefHeight="116.0" prefWidth="373.0">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="183.0" minWidth="10.0" prefWidth="118.0"/>
                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="252.0" minWidth="10.0" prefWidth="237.0"/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    </rowConstraints>
                    <children>
                        <Label text="New Password">
                            <styleClass>
                                <String fx:value="color-dark"/>
                                <String fx:value="fw-500"/>
                            </styleClass>
                        </Label>
                        <Label text="Confirm Password" GridPane.rowIndex="1">
                            <styleClass>
                                <String fx:value="color-dark"/>
                                <String fx:value="fw-500"/>
                            </styleClass>
                        </Label>
                        <PasswordField fx:id="password" GridPane.columnIndex="1"/>
                        <PasswordField onAction="#onSavePassword" fx:id="confirmPassword" GridPane.columnIndex="1"
                                       GridPane.rowIndex="1"/>
                    </children>
                </GridPane>
                <Pane prefHeight="91.0" prefWidth="355.0" VBox.vgrow="ALWAYS"/>
                <HBox alignment="CENTER" prefWidth="373.0">
                    <children>
                        <Button mnemonicParsing="false" onAction="#onCloseDialog" styleClass="btn-warning"
                                text="Cancel"/>
                        <Pane HBox.hgrow="ALWAYS"/>
                        <Button mnemonicParsing="false" onAction="#onSavePassword" styleClass="btn-success"
                                text="Save Password"/>
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</VBox>
