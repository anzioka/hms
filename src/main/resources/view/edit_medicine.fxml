<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox xmlns:fx="http://javafx.com/fxml/1" alignment="TOP_CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
      minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" spacing="5.0" styleClass="container-padded"
      stylesheets="@../css/main.css" xmlns="http://javafx.com/javafx/8"
      fx:controller="main.java.controller.EditMedicineController">
    <children>
        <Label styleClass="heading2-blue" text="Edit Drug"/>
        <HBox alignment="CENTER_LEFT" prefHeight="34.0" prefWidth="646.0" spacing="5.0" styleClass="bg-lighten6">
            <children>
                <Label styleClass="header" text="Name"/>
                <TextField fx:id="name" prefHeight="27.0" prefWidth="347.0"/>
            </children>
        </HBox>
        <HBox fillHeight="false" prefHeight="195.0" prefWidth="600.0" spacing="10.0" styleClass="bg-lighten6"
              VBox.vgrow="ALWAYS">
            <children>
                <VBox prefHeight="245.0" prefWidth="300.0" HBox.hgrow="ALWAYS">
                    <children>
                        <GridPane prefHeight="228.0" prefWidth="278.0" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS">
                            <columnConstraints>
                                <ColumnConstraints hgrow="SOMETIMES" maxWidth="138.0" minWidth="10.0"
                                                   prefWidth="124.0"/>
                                <ColumnConstraints hgrow="SOMETIMES" maxWidth="287.0" minWidth="10.0"
                                                   prefWidth="152.0"/>
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                            </rowConstraints>
                            <children>
                                <Label styleClass="header" text="Manufacturer"/>
                                <Label styleClass="header" text="Buying Price" GridPane.rowIndex="1"/>
                                <TextField fx:id="manufacturer" GridPane.columnIndex="1"/>
                                <TextField fx:id="buyingPrice" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                                <TextField fx:id="sellingPrice" prefWidth="195.0" GridPane.columnIndex="1"
                                           GridPane.rowIndex="2"/>
                                <Label styleClass="header" text="Selling Price" GridPane.rowIndex="2"/>
                                <Label styleClass="header" text="Expiry Date" GridPane.rowIndex="3"/>
                                <DatePicker fx:id="datePicker" promptText="dd-mm-yyyy" GridPane.columnIndex="1"
                                            GridPane.rowIndex="3"/>
                            </children>
                        </GridPane>
                        <HBox alignment="CENTER_LEFT" prefHeight="131.0" prefWidth="276.0" spacing="5.0"
                              styleClass="bg-lighten4">
                            <children>
                                <Label styleClass="header" text="Mark up (%)"/>
                                <TextField fx:id="markUp" prefHeight="27.0" prefWidth="72.0"/>
                                <Button defaultButton="true" mnemonicParsing="false" onAction="#onApplyMarkUp"
                                        text="Apply Markup"/>
                            </children>
                        </HBox>
                    </children>
                </VBox>
                <Separator orientation="VERTICAL" prefHeight="347.0" prefWidth="0.0"/>
                <GridPane prefWidth="300.0" HBox.hgrow="ALWAYS">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="135.0" minWidth="1.0" prefWidth="108.0"/>
                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="244.0" minWidth="10.0" prefWidth="128.0"/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints maxHeight="42.0" minHeight="10.0" prefHeight="42.0" vgrow="SOMETIMES"/>
                        <RowConstraints maxHeight="42.0" minHeight="10.0" prefHeight="42.0" vgrow="SOMETIMES"/>
                        <RowConstraints maxHeight="41.0" minHeight="10.0" prefHeight="40.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    </rowConstraints>
                    <children>
                        <Label styleClass="header" text="Stock"/>
                        <Label styleClass="header" text="Qty in Pharmacy" GridPane.rowIndex="1"/>
                        <Label styleClass="header" text="Batch Number" GridPane.rowIndex="2"/>
                        <TextField fx:id="stock" GridPane.columnIndex="1"/>
                        <TextField fx:id="pharmacyCount" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                        <TextField fx:id="batchNumber" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                        <Label styleClass="header" text="Reorder level" GridPane.rowIndex="3"/>
                        <TextField fx:id="reorderLevel" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
                    </children>
                </GridPane>
            </children>
        </HBox>
        <HBox alignment="CENTER_RIGHT" prefHeight="65.0" prefWidth="600.0">
            <children>
                <Button fx:id="deleteButton" mnemonicParsing="false" onAction="#onDeleteMedicine"
                        styleClass="btn-danger" text="Delete Drug"/>
                <Pane prefHeight="200.0" prefWidth="200.0" HBox.hgrow="ALWAYS"/>
                <Button mnemonicParsing="false" onAction="#onSaveDetails" styleClass="btn-success" text="Save Changes"/>
            </children>
        </HBox>
    </children>
</VBox>
