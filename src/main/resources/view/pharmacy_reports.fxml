<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.LineChart?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import java.lang.String?>
<VBox xmlns:fx="http://javafx.com/fxml/1" prefHeight="400.0" prefWidth="811.0" spacing="5.0" styleClass="scene"
      stylesheets="@../css/main.css" xmlns="http://javafx.com/javafx/8"
      fx:controller="main.java.controller.PharmacyReportsController">
    <children>
        <VBox alignment="CENTER" minHeight="-Infinity" prefHeight="90.0">
            <children>
                <HBox alignment="CENTER" prefHeight="50.0" prefWidth="789.0" spacing="5.0">
                    <children>
                        <Label text="Start Date"/>
                        <DatePicker fx:id="startDate" prefWidth="153.0" promptText="dd-mm-yyyy"/>
                        <Label layoutX="294.0" layoutY="27.0" text="Start Date">
                            <HBox.margin>
                                <Insets left="10.0"/>
                            </HBox.margin>
                        </Label>
                        <DatePicker fx:id="endDate" layoutX="328.0" layoutY="22.0" prefWidth="153.0"
                                    promptText="dd-mm-yyyy"/>
                        <Label text="Medicine">
                            <HBox.margin>
                                <Insets left="10.0"/>
                            </HBox.margin>
                        </Label>
                        <TextField fx:id="drugSearchField" promptText="drug name"/>
                    </children>
                </HBox>
                <Button onAction="#onSearch" mnemonicParsing="false" styleClass="btn-info-outline"
                        text="Generate Report"/>
            </children>
            <styleClass>
                <String fx:value="container-padded"/>
                <String fx:value="border-light-3"/>
            </styleClass>
        </VBox>
        <HBox spacing="5.0" VBox.vgrow="ALWAYS">
            <children>
                <VBox alignment="TOP_CENTER" spacing="5.0" HBox.hgrow="ALWAYS">
                    <children>
                        <Label fx:id="tableViewTitle" style="-fx-underline: true;" styleClass="header-light-bg"
                               text="Drug Dispensation Summary"/>
                        <TableView fx:id="tableView" VBox.vgrow="ALWAYS">
                            <columnResizePolicy>
                                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                            </columnResizePolicy>
                            <columns>
                                <TableColumn fx:id="dateColumn" prefWidth="75.0" text="Date"/>
                                <TableColumn fx:id="totalColumn" prefWidth="75.0" text="Quantity Dispensed"/>
                            </columns>
                        </TableView>
                    </children>
                </VBox>
                <Separator orientation="VERTICAL" prefHeight="200.0"/>
                <VBox alignment="CENTER" fillWidth="false" HBox.hgrow="ALWAYS">
                    <children>
                        <LineChart fx:id="chart">
                            <xAxis>
                                <CategoryAxis fx:id="categoryAxis" side="BOTTOM"/>
                            </xAxis>
                            <yAxis>
                                <NumberAxis fx:id="numberAxis" side="LEFT"/>
                            </yAxis>
                        </LineChart>
                    </children>
                </VBox>
            </children>
        </HBox>
    </children>
</VBox>
