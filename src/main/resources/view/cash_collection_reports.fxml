<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.LineChart?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.chart.PieChart?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import java.lang.*?>
<VBox xmlns:fx="http://javafx.com/fxml/1" prefHeight="568.0" prefWidth="987.0" spacing="5.0" styleClass="scene"
      stylesheets="@../css/main.css" xmlns="http://javafx.com/javafx/8"
      fx:controller="main.java.controller.CashCollectionReportController">
    <children>
        <VBox alignment="CENTER" minHeight="-Infinity" prefHeight="90.0" prefWidth="669.0" styleClass="border-light-3">
            <children>
                <HBox alignment="CENTER" prefHeight="38.0" prefWidth="667.0" spacing="5.0">
                    <children>
                        <Label styleClass="h7" text="Start Date"/>
                        <DatePicker fx:id="startDate" prefWidth="153.0" promptText="dd-mm-yyyy"/>
                        <Label styleClass="h7" text="End Date">
                            <HBox.margin>
                                <Insets left="10.0"/>
                            </HBox.margin>
                        </Label>
                        <DatePicker fx:id="endDate" prefWidth="153.0" promptText="dd-mm-yyyy"/>
                        <Label text="Category"/>
                        <ChoiceBox fx:id="categoryChoiceBox" minWidth="150.0"/>
                    </children>
                </HBox>
                <HBox alignment="CENTER" prefHeight="36.0" prefWidth="667.0">
                    <children>
                        <Button mnemonicParsing="false" onAction="#onSearch" styleClass="btn-info-outline"
                                text="Generate Report"/>
                        <Pane prefHeight="36.0" prefWidth="109.0"/>
                    </children>
                </HBox>
            </children>
        </VBox>
        <HBox prefHeight="100.0" prefWidth="200.0" spacing="15.0" VBox.vgrow="ALWAYS">
            <children>
                <VBox alignment="TOP_CENTER" spacing="5.0" HBox.hgrow="ALWAYS">
                    <children>
                        <Label fx:id="reportTitle" text="Report" textAlignment="CENTER" underline="true"
                               wrapText="true">
                            <styleClass>
                                <String fx:value="fw-500"/>
                                <String fx:value="color-dark-3"/>
                                <String fx:value="h7"/>
                            </styleClass>
                        </Label>
                        <HBox alignment="CENTER_LEFT" prefHeight="32.0">
                            <children>
                                <Label fx:id="totalLabel" prefHeight="6.0" prefWidth="116.0" text="Total : Ksh. 2000">
                                    <styleClass>
                                        <String fx:value="bg-teal"/>
                                        <String fx:value="container-padded"/>
                                        <String fx:value="fw-500"/>
                                        <String fx:value="color-white"/>
                                    </styleClass>
                                </Label>
                                <Pane prefHeight="32.0" prefWidth="65.0"/>
                                <Pane prefHeight="32.0" prefWidth="47.0"/>
                            </children>
                        </HBox>
                        <TableView fx:id="tableView" VBox.vgrow="ALWAYS">
                            <columns>
                                <TableColumn fx:id="date" prefWidth="75.0" text="Date"/>
                                <TableColumn fx:id="total" prefWidth="75.0" text="Total"/>
                            </columns>
                            <columnResizePolicy>
                                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                            </columnResizePolicy>
                        </TableView>
                    </children>
                </VBox>
                <Separator orientation="VERTICAL" prefHeight="200.0"/>
                <VBox alignment="TOP_CENTER" fillWidth="false" layoutX="10.0" layoutY="10.0" spacing="10.0"
                      HBox.hgrow="ALWAYS">
                    <children>
                        <LineChart fx:id="lineChart" VBox.vgrow="ALWAYS">
                            <xAxis>
                                <CategoryAxis fx:id="categoryAxis" side="BOTTOM"/>
                            </xAxis>
                            <yAxis>
                                <NumberAxis fx:id="numberAxis" side="LEFT"/>
                            </yAxis>
                        </LineChart>
                        <PieChart fx:id="pieChart"/>
                    </children>
                </VBox>
            </children>
        </HBox>
    </children>
</VBox>
